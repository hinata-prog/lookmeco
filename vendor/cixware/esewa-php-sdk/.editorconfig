root = true

# global
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# php
[*.php]
indent_size = 4

# markdown
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 9999
